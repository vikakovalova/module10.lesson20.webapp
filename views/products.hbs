
<section class="section">
    <div class="container">
        <h1 class="section__heading">Popular products</h1>

        <ul class="grid">
            {{#each products}}
            <li class="grid__item">
                <a href="/product/{{id}}">
                    <article class="product">
                        <img class="product__image" src="{{image}}" alt="{{name}}" />
                        <h2 class="product__name">{{name}}</h2>
                        <p class="product__price">Price: {{price}} credits</p>
                        <button type="button" class="button product__button" aria-label="Add to cart">
                            <svg class="button__icon" width="20" height="20">
                                <use href="#cart"></use>
                            </svg>
                        </button>
                    </article>
                </a>
            </li>
            {{/each}}
        </ul>
    </div>
</section>